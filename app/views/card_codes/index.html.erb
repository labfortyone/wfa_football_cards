<h1>Listing card_codes</h1>

<table>
  <thead>
    <tr>
      <th>Card</th>
      <th>Code</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @card_codes.each do |card_code| %>
      <tr>
        <td><%= @cards.find_by_id(card_code.card_id).name %></td>
        <td><%= card_code.code %></td>
        <td><%= link_to 'Show', card_code %></td>
        <td><%= link_to 'Destroy', card_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card code', new_card_code_path %>
